{% extends "::layout.html.twig" %}

{% block log %}
  <li>
    <a class="page-scroll" href="{{ path('s7t_h_directory_tricklist') }}"><span class="glyphicon glyphicon-globe"></span> Back Home</a>
  </li>
{% endblock %}

{% block header %}
  <div class="header-content">
        <div class="header-content-inner">
            <div>
              {#if there is an error, we display it in a frame #}
              {% if error %}
                <div class="alert alert-danger">{{ error.message }}</div>
              {% endif %}

              {# the form, with a send url to the route « login_check »#}
              <form action="{{ path('login_check') }}" method="post">
                <label for="username">Login :</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" />

                <label for="password">Mot de passe :</label>
                <input type="password" id="password" name="_password" />
                <br />
                <input type="submit" value="Connexion" />
              </form>
            </div>
        </div>
    </div>
{% endblock %}