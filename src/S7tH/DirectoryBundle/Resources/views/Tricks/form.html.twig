<h3>Ajouter un Trick</h3>

<div class="well wellmore">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# general errors of the form #}
  {{ form_errors(form) }}


  {# manual generation and spread : #}
  <div class="form-group">
    {# label generating #}
    {{ form_label(form.name, "Nom du Trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    {# Displaying of errors of this field #}
    {{ form_errors(form.name) }}

    <div class="col-sm-10">
      {# input generating #}
      {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {# the same thing for an another field #}
  <div class="form-group">
    {{ form_label(form.description, "Description du trick", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.description) }}
    <div class="col-sm-10">
      {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  
  {# we just display the widget for the button #}
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  {# auto generating of the fields wich are not read again.
     In this example, the field CSRF will be generate automatically
     and all hidden fields (type « hidden »). #}
  {{ form_rest(form) }}

  {# close the mark <form> of  HTML formulaire #}
  {{ form_end(form) }}
</div>