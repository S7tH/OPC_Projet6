       <a class="page-scroll" href="{{ path('s7t_h_directory_tricklist') }}"><span class="glyphicon glyphicon-globe"></span> Home</a>
    </li>
{% endblock %}

{% block header %}

    <div class="header-content">
        <div class="header-content-inner">
            {# we display flash message wich name is « notice » #}
                    {% for message in app.session.flashbag.get('notice') %}
                        <p class="msg-flash"> {{ message }}</p>
                    {% endfor %}
            <h1 id="homeHeading">Administration Liste des membres</h1>

                
                {% for users in userlist %} 

                    {{ users }}
                    {# button edit #}
                    <a href="{{ path('s7t_h_directory_admin', {'id':users.id}) }}">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <hr>

                {% endfor %}
                
        </div>
    </div>

{% endblock %}